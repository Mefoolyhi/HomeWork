<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.helloworld.LineEquationActivity">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_above_line"
             android:id="@+id/txt_line_warning"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_line_warning"
            android:id="@+id/ll"
        >

            <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                android:id="@+id/edita_line"
                android:hint="1"
                android:textSize="38sp"

                android:inputType="phone"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x +"

                android:textSize="48sp"
            />
            <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                android:id="@+id/editb_line"
                android:hint="0"
                android:textSize="38sp"
                android:inputType="phone"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="= 0"
                android:textSize="48sp"
            />

        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:id="@+id/btn_go_line"
                android:text="@string/btn_go"
                />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
